<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/totalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple (Rs 100)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange (Rs 200)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chkItem1" />

    <CheckBox
        android:id="@+id/chkItem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banana (Rs 50)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chkItem2" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/customChk"
        android:text="Guava (Rs 70)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/mycheckbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chkItem3" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Add To Cart"
        app:layout_constraintTop_toBottomOf="@id/customChk" />

</androidx.constraintlayout.widget.ConstraintLayout>